# vim: set filetype=zsh :

# {{{ Options de zsh

emulate -R zsh

setopt local_options

setopt warn_create_global

zmodload zsh/regex

setopt null_glob

# }}}

local note racine nom repertoire fichier titre nouveauNom

note='NONE'
racine=~/graphix

# {{{ Boucle arguments

while true
do
	case $1 in
		[0-9a-zA-Z])
			note=$1
			shift
			;;
		?*)
			racine=$1
			shift
			;;
		*)
			break
			;;
	esac
done

# }}}

# {{{ Format de la note

# Minuscules ?
#note=${note:l}

# Majuscules ?
note=${note:u}

# }}}

# {{{ Fond d'Ã©cran actuel

nom=`sed -n '/.*:.*:.*/p' ~/log/wallpaper.log | tail -n 1 `
nom=${nom##*:}
nom=${nom// }

# }}}

# echo "eve $note $nom"
# echo

eve $note $nom
