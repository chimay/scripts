# vim: set filetype=zsh :

# {{{ Options de zsh

emulate -R zsh

setopt local_options

setopt warn_create_global

zmodload zsh/regex

setopt null_glob

# }}}

# {{{ Variables

local note racine nom

# }}}

note='NONE'
racine=~/audio

# {{{ Boucle arguments

while true
do
	case $1 in
		[0-9a-zA-Z])
			note=$1
			shift
			;;
		?*)
			racine=$1
			shift
			;;
		*)
			break
			;;
	esac
done

# }}}

# {{{ Format de la note

# Minuscules ?
#note=${note:l}

# Majuscules ?
note=${note:u}

# }}}

# {{{ Morceau actuellement jou√©

nom=`mpc -f "%file%" | awk '{ if ( NR == 1 ) print $0 }'`

nom=${racine}/${nom}

# }}}

eve $note $nom
